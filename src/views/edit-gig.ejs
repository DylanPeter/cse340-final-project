<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Gig</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <h1>Edit Gig</h1>

    <% if (errors && errors.length > 0) { %>
        <div class="error-messages">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <form action="/edit-gig/<%= gig.id %>" method="POST">
        <label for="title">Gig Title:</label>
        <input type="text" id="title" name="title" value="<%= gig.title %>" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= gig.description %></textarea>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= new Date(gig.date).toISOString().split('T')[0] %>" required>        

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= gig.location %>" required>

        <button type="submit">Update Gig</button>
    </form>

    <a href="/gigs">Cancel</a>


</body>
</html>
