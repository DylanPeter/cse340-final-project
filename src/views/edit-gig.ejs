<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Gig</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <h1>Edit Gig</h1>

    <% if (errors && errors.length > 0) { %>
      <div class="error-message">
        <ul>
          <% errors.forEach(error => { %><li><%= error %></li><% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/edit-gig/<%= gig.id %>" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" value="<%= gig.title %>" required />

      <label for="description">Description:</label>
      <textarea name="description"><%= gig.description %></textarea>

      <label for="date">Date:</label>
      <input type="date" name="date" value="<%= new Date(gig.date).toISOString().split('T')[0] %>" required />

      <label for="location">Location:</label>
      <input type="text" name="location" value="<%= gig.location %>" required />

      <button type="submit">Update Gig</button>
    </form>
  </div>
</body>
</html>
